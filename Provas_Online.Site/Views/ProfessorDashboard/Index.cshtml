<div class="container-fluid">

    <div class="offset-1">
        <h4 class="font-weight-bold">
            Avaliações
        </h4>
    </div>

    <br />

    <div class="row">
        <div class="offset-2 col-8">
            <button class="btn-sm btn-success float-right" data-toggle="modal" data-target="#criarNovaAvaliacao">Criar nova avaliação</button>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="offset-2 col-8">
            <div class="form-group">
                <span> Matemática</span>
                <button class="btn-sm btn-danger float-right" title="Excluir" name="Excluir">Excluir</button>
                <button class="btn-sm btn-dark float-right" title="Editar" name="Editar">Editar</button>
            </div>
            <hr />
        </div>

        <div class="offset-2 col-8">
            <div class="form-group">
                <span> Física</span>
                <button class="btn-sm btn-danger float-right" title="Excluir" name="Excluir">Excluir</button>
                <button class="btn-sm btn-dark float-right" title="Editar" name="Editar">Editar</button>
            </div>
            <hr />
        </div>

        <div class="offset-2 col-8">
            <div class="form-group">
                <span> Química</span>
                <button class="btn-sm btn-danger float-right" title="Excluir" name="Excluir">Excluir</button>
                <button class="btn-sm btn-dark float-right" title="Editar" name="Editar">Editar</button>
            </div>
            <hr />
        </div>
    </div>
</div>


<!-- Modal criação de nova avaliação -->
<div class="modal fade" id="criarNovaAvaliacao" tabindex="-1" role="dialog" aria-labelledby="criarNovaAvaliacaoTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Criar nova avaliação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label for="inputTitulo" class="col-sm-2 col-form-label">Título:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control"  >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputDisciplina" class="col-sm-2 col-form-label">Disciplina:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control"  >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputDescricao" class="col-sm-2 col-form-label">Descrição:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputMateria" class="col-sm-2 col-form-label">Matéria:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" >
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="btnSalvarNovaAvaliacao">Salvar</button>
            </div>
        </div>
    </div>
</div>


